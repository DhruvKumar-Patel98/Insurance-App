<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/vehiclecardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/titleForBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="30% off on you insurance"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!--text view for displaying course tracks-->

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">
           <EditText
               android:id="@+id/vehicleRegistrationNumber"
               android:hint="Enter your vehicle number"
               android:layout_width="match_parent"
               android:textSize="24sp"
               android:inputType="textCapSentences"
               android:layout_height="wrap_content"/>

           <ImageButton
               android:id="@+id/goToEnterUserPolicyDetails"
               android:layout_width="35sp"
               android:layout_height="35sp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:background="@color/green"
               android:layout_marginRight="10dp"
               android:src="@drawable/ic_next_launcher_foreground" />

       </RelativeLayout>

        <!--text view for displaying course duration-->
        <Button
            android:id="@+id/newInsuranceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking for new Insurance?"
            android:background="@color/tansparentColor"
            android:textColor="@color/black"
            android:padding="20dp"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>